<h1>ログイン</h1>
  <%= form_with url: login_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
    <%= f.label :password %>
    <%= f.password_field :password, class:"form-control" %>
    <%= f.submit "Log in", class: "btn btn-primary" %>

<% end %>

  <p>New user? <%= link_to "Sign up now!", "/users/new" %></p>


